/** @format */
{
    "env": {
        "amd": true,
        "browser": true,
        "es6": true,
        "jquery": true,
        "node": true,
        "shared-node-browser": true,
        "worker": true
    },
    "extends": ["airbnb-base", "plugin:vue/recommended"],
    "plugins": ["react", "angular", "vue", "html"],
    "parserOptions": {
        "ecmaVersion": 9,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "camelcase": [
            "error",
            {
                "properties": "always"
            }
        ], // 要求使用骆驼拼写法
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ], // 强制在逗号周围使用空格
        "key-spacing": [
            "error",
            {
                "mode": "strict"
            }
        ], // 强制在对象字面量的键和值之间使用一致的空格
        "keyword-spacing": [
            "error",
            {
                "after": true
            }
        ], // 强制关键字周围空格的一致性
        "object-curly-newline": [
            "error",
            {
                "multiline": true,
                "minProperties": 2
            }
        ], // 强制在花括号内使用一致的换行符
        "function-paren-newline": ["error", "multiline"], // 强制在函数括号内使用一致的换行
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ], // 强制使用一致的反勾号、双引号或单引号
        "arrow-parens": ["error", "as-needed"], // 要求箭头函数的参数使用圆括号
        "brace-style": ["error", "1tbs"], // 大括号风格要求
        "class-methods-use-this": "off", // 强制类方法使用 this
        "comma-dangle": "off", // 要求或禁止使用拖尾逗号
        "comma-style": ["error", "last"], // 逗号风格
        "computed-property-spacing": ["error", "never"], // 禁止或强制在计算属性中使用空格
        "consistent-return": "off", // 要求使用一致的 return 语句
        "curly": ["error", "all"], // 要求遵循大括号约定
        "default-case": "off", // 要求 Switch 语句中有 Default 分支
        "eqeqeq": ["error", "always"], // 要求使用 === 和 !==
        "func-names": "off", // 要求或禁止命名的 function 表达式
        "func-style": "off", // 强制 function 声明或表达式的一致性
        "global-require": "off", // 强制在模块顶部调用 require()
        "import/extensions": "off",
        "import/newline-after-import": "off",
        "import/no-unresolved": "off",
        "indent": ["error", 4, { "SwitchCase": 1 }], // 强制使用一致的缩进
        "jsx-quotes": ["error", "prefer-single"], // 强制在 JSX 属性中使用一致的单引号或双引号
        "max-len": "off", // 强制行的最大长度
        "multiline-comment-style": "off",
        "new-parens": "error", // 要求调用无参构造函数时带括号
        "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }], // 要求方法链中每个调用都有一个换行符
        "no-bitwise": "off", // 禁止使用按位操作符
        "no-confusing-arrow": "error", // 禁止在可能与比较操作符相混淆的地方使用箭头函数
        "no-console": "warn", // 禁用 console
        "no-control-regex": "off", // 禁止在正则表达式中使用控制字符
        "no-extend-native": "off", // 禁止扩展原生对象
        "no-mixed-operators": "off", // 禁止混合使用不同的操作符
        "no-mixed-spaces-and-tabs": "error", // 禁止对函数参数再赋值
        "no-nested-ternary": "off", // 禁止使用嵌套的三元表达式
        "no-param-reassign": "off", // 禁止对函数参数再赋值
        "no-restricted-globals": "off", // 禁用特定的全局变量
        "no-restricted-syntax": "off", // 禁止使用特定的语法
        "no-script-url": "off", // 禁用 Script URL
        "no-shadow": "error", // 禁止变量声明覆盖外层作用域的变量
        "no-trailing-spaces": "error", // 禁用行尾空白
        "no-undef": "warn", // 禁用未声明的变量
        "no-underscore-dangle": "off", // 禁止标识符中有悬空下划线
        "no-unused-vars": ["warn", { "args": "none" }], // 禁止未使用过的变量
        "no-use-before-define": "warn", // 禁止定义前使用
        "no-var": "off", // 要求使用 let 或 const 而不是 var
        "prefer-arrow-callback": "off", // 要求使用箭头函数作为回调
        "prefer-template": "off", // 建议使用模板而非字符串连接
        "radix": "off", // 要求parseInt必须有基数
        "semi": ["error", "always"], //要求或禁止使用分号代替 ASI(自动分号插入)
        "vars-on-top": "off", // 要求将变量声明放在它们作用域的顶部
        "wrap-iife": ["error", "any"] // 需要把立即执行的函数包裹起来
        // "space-before-function-paren": ["error", "never"], // 要求或禁止函数圆括号之前有一个空格
    }
}
